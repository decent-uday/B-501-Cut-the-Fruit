#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */ 
    int w,i,j;
    
    scanf("%d",&w);
    if(w%2!=0 || w==2)
        printf("NO");
    else
    {
    for(i=2;i<=10;i+=2)
    {
        j=w-i;
        if(j%2==0)
        {
           printf("YES");
            break;
           
        }
       
    }
    }
    return 0;
}
